/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: rpx;
  border-radius: 50%;
}

.qrcode_view {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.qrcode {
  width: 133rpx;
  height: 133rpx;
}

.userinfo-nickname {
  color: #aaa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.usermotto {
  margin-top: 200px;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.motto_plus {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.search {
  margin-top: 20px;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.tips {
  width: 700rpx;
  height: 100%;
  display: block;
  margin-top: 35px;
  margin-left: 35rpx;
  flex-direction: row;
  align-items: center;
  align-content: center;
}

.tip {
  display: flex;
  flex-direction: row;
  float: left;
  background: #EBEBEB;
  line-height: 30px;
  
  color: #2c2e2e;
  padding: 3px 15px;
  margin: 0 10px 10px 0;
  border-radius: 20px;
  white-space: nowrap;
}

.tip-hover{
  display: flex;
  flex-direction: row;
  float: left;
  background: #D1EEEE;
  line-height: 30px;
  
  color: #2c2e2e;
  padding: 3px 15px;
  margin: 0 10px 10px 0;
  border-radius: 20px;
  white-space: nowrap;
}
.tag {
  font-size: 22px;
  outline-color: initial;
  outline-style: initial;
  outline-width: 0;
  text-decoration: none;
  cursor: auto;
}
